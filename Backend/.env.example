# Stellar Event Monitor Configuration

# Horizon Network Configuration
HORIZON_URL=https://horizon-testnet.stellar.org
# For mainnet, use: https://horizon.stellar.org

# Database Configuration
DATABASE_PATH=./stellar-events.db

# Monitoring Control
STELLAR_MONITOR_ENABLED=true

# Server Configuration
PORT=3000

# Optional Redis Configuration (if needed for distributed deployments)
# REDIS_URL=redis://localhost:6379

DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=stellara_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REFRESH=10
RATE_LIMIT_API=100
RATE_LIMIT_WINDOW=60

# API Token
API_TOKEN_DEFAULT_EXPIRY_DAYS=90
